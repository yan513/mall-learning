<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yl.mall.dao.UmsPermissionDao">

    <resultMap type="com.yl.mall.entity.UmsPermission" id="UmsPermissionMap">
        <result property="id" column="id" jdbcType="OTHER"/>
        <result property="pid" column="pid" jdbcType="OTHER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="value" column="value" jdbcType="VARCHAR"/>
        <result property="icon" column="icon" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
        <result property="uri" column="uri" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="sort" column="sort" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 权限查询 -->
    <select id="selectByCondition" parameterType="map" resultType="com.yl.mall.entity.UmsPermission">
        select up.*
        from ums_permission up
        left join ums_role_permission_relation urpr ON urpr.permission_id = up.id
        left join ums_role ur on ur.id = urpr.role_id
        left join ums_admin_role_relation uarr ON uarr.role_id = ur.id
        <where>
            <if test="adminId != null and adminId != ''">
                and uarr.admin_id = #{adminId, jdbcType=DECIMAL}
            </if>
            <if test="roleId != null and roleId != ''">
                and urpr.role_id = #{roleId, jdbcType=DECIMAL}
            </if>
        </where>
    </select>

    <!--查询单个-->
    <select id="queryById" resultMap="UmsPermissionMap">
        select
          id, pid, name, value, icon, type, uri, status, create_time, sort
        from mall.ums_permission
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UmsPermissionMap">
        select
          id, pid, name, value, icon, type, uri, status, create_time, sort
        from mall.ums_permission
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UmsPermissionMap">
        select
          id, pid, name, value, icon, type, uri, status, create_time, sort
        from mall.ums_permission
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="pid != null">
                and pid = #{pid}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="value != null and value != ''">
                and value = #{value}
            </if>
            <if test="icon != null and icon != ''">
                and icon = #{icon}
            </if>
            <if test="type != null">
                and type = #{type}
            </if>
            <if test="uri != null and uri != ''">
                and uri = #{uri}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="sort != null">
                and sort = #{sort}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into mall.ums_permission(pid, name, value, icon, type, uri, status, create_time, sort)
        values (#{pid}, #{name}, #{value}, #{icon}, #{type}, #{uri}, #{status}, #{createTime}, #{sort})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mall.ums_permission
        <set>
            <if test="pid != null">
                pid = #{pid},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="value != null and value != ''">
                value = #{value},
            </if>
            <if test="icon != null and icon != ''">
                icon = #{icon},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="uri != null and uri != ''">
                uri = #{uri},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mall.ums_permission where id = #{id}
    </delete>

</mapper>